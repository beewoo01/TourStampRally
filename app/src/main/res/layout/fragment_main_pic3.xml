<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainPic3Fragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_400sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_main_slide_img5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_main_slide2"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_250sdp"
        android:text="#축제투어"
        android:shadowRadius="3.0"
        android:shadowDx="3.0"
        android:shadowDy="3.0"
        android:shadowColor="#A39A83"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        android:padding="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_main_slide3"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:padding="@dimen/_5sdp"
        android:text="보고 즐기고 느끼는 축제, 부산에서 함께해요!\n#계절에따라 #한정기간 #다양함"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/textView5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>