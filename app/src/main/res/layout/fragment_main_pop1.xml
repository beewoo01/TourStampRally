<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF4EB"
    tools:context=".MainPop1Fragment">

    <TextView
        android:id="@+id/title_tvx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosans_kr_black"
        android:textColor="@color/black"
        android:textSize="@dimen/_17sdp"
        android:gravity="center"
        android:text="원하는 장소에 도착한 후\n스탬프 구역을 확인하세요!"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/content_tvx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="탑제된 내비게이션을 통해 쉽게 길을 찾아가보세요."
        android:fontFamily="@font/notosans_kr_medium"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_tvx"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:src="@drawable/main_popup_img_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content_tvx" />

    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:src="@drawable/ic_arrow_right_blue"
        app:layout_constraintStart_toEndOf="@id/imageView3"
        app:layout_constraintTop_toBottomOf="@id/content_tvx"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>