<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF4EB"
    tools:context=".MainPop3Fragment">

    <TextView
        android:id="@+id/title_tvx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosans_kr_black"
        android:textColor="@color/black"
        android:textSize="@dimen/_17sdp"
        android:gravity="center"
        android:text="선착순 쿠폰을 저장해\n이용해보세요!"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/content_tvx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="코스 근처의 가맹점에서 제공하는 쿠폰을 찾아보세요."
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:fontFamily="@font/notosans_kr_medium"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_tvx"/>



    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:src="@drawable/ic_main_popup3"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content_tvx"/>
   <!-- <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:src="@drawable/ic_arrow_left_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_tvx"
        app:layout_constraintEnd_toStartOf="@id/imageView5"/>-->

</androidx.constraintlayout.widget.ConstraintLayout>