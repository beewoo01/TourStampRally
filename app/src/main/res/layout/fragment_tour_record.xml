<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fragment"
            type="com.sdin.tourstamprally.ui.fragment.TourRecordFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.TourRecordFragment">



        <TextView
            android:id="@+id/popular_txv"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="wrap_content"
            android:text="인기많은순"
            android:textColor="@color/mainColor"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_6sdp"
            android:background="@drawable/testdrawable"
            android:layout_marginTop="@dimen/_30sdp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/recent_txv"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/recent_txv"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="wrap_content"
            android:text="최신획득순"
            android:textColor="@color/mainColor"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_6sdp"
            android:background="@drawable/testdrawable"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/popular_txv"
            app:layout_constraintEnd_toStartOf="@id/near_txv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            />

        <TextView
            android:id="@+id/near_txv"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="wrap_content"
            android:text="가까운순"
            android:gravity="center"
            android:textColor="@color/mainColor"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_6sdp"
            android:background="@drawable/testdrawable"
            android:layout_marginTop="@dimen/_30sdp"
            app:layout_constraintStart_toEndOf="@id/recent_txv"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />




        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_goneMarginTop="@dimen/_30sdp"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:background="@drawable/bg_rounded_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recent_txv"
            >

            <ImageView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/logo_gray"
                />

            <LinearLayout
                android:id="@+id/spinner_layout"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_rounded_09"
                app:layout_constraintBottom_toTopOf="@id/recyclerview_tour_record"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="구 선택"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray"
                    android:layout_marginVertical="8dp"
                    />

                <Spinner
                    android:id="@+id/spinner_tour_record"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    tools:listitem="@android:layout/simple_spinner_item"
                    />

            </LinearLayout>




            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_tour_record"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_20sdp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spinner_layout"
                tools:listitem="@layout/tour_record_item_re"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>